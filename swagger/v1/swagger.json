{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "BrainBooster API",
        "description": "Tài liệu mô tả API cho App BrainBooster v1",
        "contact": {
            "name": "GG Team"
        },
        "license": {
            "name": "MIT"
        }
    },
    "host": "localhost:8080",
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "securityDefinitions": {
        "api_key": {
            "type": "apiKey",
            "name": "Authorization",
